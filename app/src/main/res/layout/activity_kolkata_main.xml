<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kolkata_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayankchauhan.citygallery.Kolkata.KolkataMain">


    <ImageView
        android:id="@+id/kol_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/kolkata3"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/kol_text"
        android:text="@string/kol_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kol_img"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

    <Button
        android:text="Famous Places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kol_butt2"
        android:layout_marginEnd="41dp"
        android:layout_alignBaseline="@+id/kol_butt1"
        android:layout_alignBottom="@+id/kol_butt1"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:id="@+id/kol_butt1"
        android:textColor="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
